{
  "name": "yaml-config-query",
  "version": "0.1.0",
  "description": "Define YAML document, filter it with JSON query and get result as outputs",
  "main": "lib/main.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint . -c ./.github/linters/.eslintrc.yml",
    "lint:check": "eslint src/**/*.ts",
    "build": "npx ncc build src/main.ts -o dist --source-map --license licenses.txt",
    "build:watch": "npm run package -- --watch",
    "test": "npx jest",
    "format-check": "prettier --check '**/*.ts'",
    "ci-test": "npx jest",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cloudposse-github-actions/github-action-yaml-config-query.git"
  },
  "keywords": [
    "Github",
    "Action",
    "Javascript"
  ],
  "author": "cloudposse",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/cloudposse-github-actions/github-action-yaml-config-query/issues"
  },
  "homepage": "https://github.com/cloudposse-github-actions/github-action-yaml-config-query/issues#readme",
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@jq-tools/jq": "^0.0.10",
    "yaml": "^2.5.1"
  },
  "devDependencies": {
    "@types/node": "^20.4.4",
    "@jest/globals": "^29.7.0",
    "eslint": "^8.45.0",
    "js-yaml": "^4.1.0",
    "typescript": "^5.6.3",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vercel/ncc": "^0.38.1",
    "eslint-plugin-jest": "^28.8.0",
    "eslint-plugin-jsonc": "^2.16.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.3.3",
    "prettier-eslint": "^16.3.0",
    "ts-jest": "^29.2.4",
    "tmp": "^0.2.3"
  }
}
